<div class="containerr newimage" style="background-image: url('https://images.unsplash.com/photo-1595751866979-de6e9d606220?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1652&q=80');">
  <div class="row justify-content-center">
    <div class="col-sm-5" style="margin-top: 70px;">
      <div class="mt-4" data-aos="flip-right" data-aos-delay="80">
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name ,placeholder: "Enter the Name" %>
          <%= f.input :image_url, placeholder: "Enter the url" %>
          <%= f.button :submit, 'Create Cocktail', class: "btn", style: "background-color: #ffa987; border-radius: 10px;" %>
          <%= link_to 'Back', cocktails_path, class: "btn btn-primary", style: "border-radius: 10px;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
